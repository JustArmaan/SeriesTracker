@model IEnumerable<SeriesTracker.Models.Movie>

<h2>Movie List</h2>

<a class="btn btn-success">+ Add Movie</a>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Genre</th>
            <th>Director</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Title</td>
                <td>@movie.Genre</td>
                <td>@movie.Director</td>
                <td>
                    <form onsubmit="return confirm('Are you sure you want to delete this movie?');">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
